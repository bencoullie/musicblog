- if user_signed_in? && current_user.admin?
	%h1 Listing users
	- @users.each do |user|
		.well
			%p
				User:
				= user.email
			%p
				User ID:
				= user.id
			%br
			= link_to user, :method => :delete, :data => { :confirm => 'Are you sure you want to delete this user?' } do
				%button.btn.btn-success
					Destroy

-else
	%h1 Listing users
	- @users.each do |user|
		.well
			%p
				User:
				= user.email
			%p
				User ID:
				= user.id